import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

public class FirstTest {

    private WebDriver driver;
    
    @BeforeClass
    public void setUp() {
        // I use this construction for ability to use "GeckoDriver"
        
        System.setProperty("webdriver.gecko.driver","D:\\Selenium\\geckodriver.exe");
        
        driver = new FirefoxDriver();
    }

    @Test
    public void gotoEdaUaPage() {
       
        driver.get("https://eda.ua/");
        
        /*
        * Add new user (open registration form, enter invalid email, enter password, 
        * confirm entered results and close registration form)
        */
        
        driver.findElement(By.xpath("html/body/header/div[1]/div/div/div[2]/div/div/div/a[2]")).click();

        driver.findElement(By.xpath("//div[text()='Регистрация']//following::input[@data-name='email']")).sendKeys("sgh8g3@3211.dsf2hdf344");

        driver.findElement(By.xpath("//input[@class='btn btn-primary btn-lg' and @name='yt3']//preceding::input[1]")).sendKeys("3kl6435");

        driver.findElement(By.xpath("//input[@class='btn btn-primary btn-lg' and @name='yt3']")).click();

        driver.findElement(By.xpath("//div[@id='login' and @class='login-form-popup modal fade in']/div[@class='modal-dialog']/button[@class='close']")).click();
        
        
        /*
        * Check field - "Search", add string with text to field "Search", press on button "Заказать"
        */
        
        driver.findElement(By.xpath("//div[text()='Заказывайте доставку еды онлайн']//preceding::input[3]")).sendKeys("Ролл «Филадельфия с угрем Ханай»");

        driver.findElement(By.xpath("//div[text()='Заказывайте доставку еды онлайн']//preceding::input[3]")).sendKeys(Keys.RETURN);

        driver.findElement(By.xpath("//div[@class='tab-pane active']//span[@class='btn btn-primary btn-sm pull-right']")).click();
        
    @AfterClass
    public void tearDown() {
        driver.close();
    }
